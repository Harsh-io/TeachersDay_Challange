### Psuedo Code
int n -> no of inputs you want to take
take input as string s
first letter = s.char(0)
last letter = s.length() - 1
middle letter = s.lenght() - 2

if (s.length() > 10)
 new word = first letter + middle letter +last letter
else
  new word = s


### Code
import java.util.Scanner;

public class WordAbbreviation {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        
        int n = scanner.nextInt();
        scanner.nextLine(); // Consume the newline after the integer
        
        for (int i = 0; i < n; i++) {
            String word = scanner.nextLine();
            
            if (word.length() > 10) {
                // Create abbreviation: first letter + count of middle letters + last letter
                char firstLetter = word.charAt(0);
                char lastLetter = word.charAt(word.length() - 1);
                int middleCount = word.length() - 2; // Total length minus first and last letters
                
                String abbreviation = firstLetter + String.valueOf(middleCount) + lastLetter;
                System.out.println(abbreviation);
            } else {
                // Word is not too long, print as is
                System.out.println(word);
            }
        }
        
        scanner.close();
    }
}
